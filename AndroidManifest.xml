<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dg.ingredientcombinator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Recipes"
            android:label="@string/title_activity_recipes" >
        </activity>
        <activity
            android:name=".LaunchScreen"
            android:label="@string/title_activity_launch_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ingredients"
            android:label="@string/title_activity_ingredients" >
        </activity>
        <activity
            android:name=".Results"
            android:label="@string/title_activity_results" >
        </activity>
        <activity
            android:name=".CreateNewRecipe"
            android:label="@string/title_activity_create_new_recipe" >
        </activity>
        <activity
            android:name=".InputNewRecipe"
            android:label="@string/title_activity_input_new_recipe" >
        </activity>
    </application>

</manifest>
