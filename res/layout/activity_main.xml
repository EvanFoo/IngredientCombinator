<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dg.ingredientcombinator.MainActivity" >

    <Button 
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:layout_margin="10dp"
		android:text="@string/main_button_ingredients"
		android:onClick="on_click_ingredients"
		android:background="@drawable/main_button_ingredients"
	/>
    
    <Button 
        android:layout_width="match_parent"
        android:layout_height="0dp"
    	android:layout_weight="1"
    	android:layout_margin="10dp"
        android:text="@string/main_button_recipes"
        android:onClick="on_click_recipes"
		android:background="@drawable/main_button_recipes"
    />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
    	android:layout_weight="1"
    	android:layout_margin="10dp"
        android:text="@string/main_button_results"
        android:onClick="on_click_results"
		android:background="@drawable/main_button_results"
    />  

</LinearLayout>

